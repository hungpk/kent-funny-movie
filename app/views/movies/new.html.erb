 <%= form_for :movie, url: movies_path, method: :post do |f| -%>
    <fieldset class="share-form mx-auto">
      <legend >Share a Youtube movie</legend>
      <div class="form-group row">
        <label for="txtUrl" class="col-sm-2 col-form-label">Youtube URL</label>
        <div class="col-sm-10">
          <input name="url" type="text" class="form-control" id="txtUrl">
        </div>
      </div>
      <div class="form-group row">        
        <div class="col-sm-10 offset-sm-2">
          <button type="submit" class="btn btn-outline-primary form-control">Share</button>
        </div>
      </div>
    </fieldset>      
    <% end -%>